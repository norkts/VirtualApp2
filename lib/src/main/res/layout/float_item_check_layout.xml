<?xml version="1.0" encoding="utf-8"?>
<com.carlos.science.tab.CheckLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black10"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:gravity="center_vertical" >
    <Switch
        android:id="@+id/aSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:checked="false"
        android:thumb="@drawable/my_switch_thumb"
        android:track="@drawable/my_switch_track"
        tools:checked="false" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Hello"
        android:textColor="#FFFFFFF0"
        android:gravity="end"/>
</com.carlos.science.tab.CheckLayout>